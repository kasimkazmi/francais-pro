rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['admin'];
    }

    // Global seasonal theme
    match /systemSettings/seasonalTheme {
      allow read: if true; // public read to avoid permission errors before auth initializes
      allow write: if isAdmin();
    }

    // User progress - public read for stats; user can write own; admins can read all
    match /userProgress/{uid} {
      allow read: if true; // public read for stats calculation
      allow write: if isSignedIn() && request.auth.uid == uid;
      allow read: if isAdmin();
    }

    // User favorites - own
    match /userFavorites/{favoriteId} {
      allow read, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // Leaderboard - public read, authenticated write
    match /leaderboard/{document} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Platform stats - public read, authenticated write
    match /platformStats/{document} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // User profiles - public read; user can write own; admins can read all
    match /userProfiles/{uid} {
      allow read: if true; // public read for stats calculation
      allow write: if isSignedIn() && request.auth.uid == uid;
      allow read: if isAdmin();
    }

    // User activities - user create own; admins can read all
    match /userActivities/{activityId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if isSignedIn() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    // User preferences - own; admins can read all
    match /userPreferences/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
      allow read: if isAdmin();
    }

    // User sessions - own; admins can read all
    match /userSessions/{sessionId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, write: if isSignedIn() && resource.data.uid == request.auth.uid;
      allow read: if isAdmin();
    }

    // Admin users
    match /adminUsers/{uid} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == uid || isAdmin());
    }

    // Banned users - admins only
    match /bannedUsers/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
